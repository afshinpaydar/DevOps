{
    "apiVersion": "v1",
    "kind": "Template",
    "labels": {
        "template": "Aerospike-persistent-template"
    },
    "message": "The following service(s) have been created in your project: ${DATABASE_SERVICE_NAME}.\n\n       Username: ${MYSQL_USER}\n       Password: ${MYSQL_PASSWORD}\n  Database Name: ${MYSQL_DATABASE}\n Connection URL: mysql://${DATABASE_SERVICE_NAME}:3306/\n\nFor more information about using this template, including OpenShift considerations, see https://github.com/sclorg/mysql-container/blob/master/5.7/root/usr/share/container-scripts/mysql/README.md.",
    "metadata": {
        "annotations": {
            "description": "AEROSPIKE database service, with persistent storage. For more information about using this template, including OpenShift considerations, see https://github.com/sclorg/mysql-container/blob/master/5.7/root/usr/share/container-scripts/mysql/README.md.\n\nNOTE: Scaling to more than one replica is not supported. You must have persistent volumes available in your cluster to use this template.",
            "iconClass": "icon-aerospike-database",
            "openshift.io/display-name": "Aerospike",
            "openshift.io/documentation-url": "https://docs.okd.io/latest/using_images/db_images/mysql.html",
            "openshift.io/long-description": "This template provides a standalone Aerospike cluster.",
            "openshift.io/provider-display-name": "Afshin Paydar, Inc.",
            "openshift.io/support-url": "http://afshinpaydar.ir",
            "tags": "database,aerospike"
        },
        "name": "aerospike-persistent"
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "annotations": {
                    "template.openshift.io/expose-uri": "aerospike://{.spec.clusterIP}:{.spec.ports[?(.name==\"aerospike\")].port}"
                },
                "name": "aerospike"
            },
            "spec": {
                "ports": [
                    {
                        "name": "aerospike-client",
                        "port": 3000
                    }
                ],
                "selector": {
                    "name": "aerospike"
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "PersistentVolumeClaim",
            "metadata": {
                "name": "aerospike"
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "${VOLUME_CAPACITY}"
                    }
                },
                "storageClassName": "glusterfs-storage"
            }
        },
        {
            "apiVersion": "apps/v1",
            "kind": "StatefulSet",
            "metadata": {
                "annotations": {
                    "template.alpha.openshift.io/wait-for-ready": "true"
                },
                "name": "aerospike"
            },
            "spec": {
                "replicas": 3,
                "selector": {
                    "matchLabels": {
                        "app": "&AerospikeDeploymentLabels"
                    }   
                },
                "strategy": {
                    "type": "Recreate"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "*AerospikeDeploymentLabels"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "env": [
                                    {
                                        "name": "NAMESPACE",
                                        "value": "test"
                                    },
                                    {
                                        "name": "REPL_FACTOR",
                                        "value": "0"
                                    },
                                    {
                                        "name": "MEM_GB",
                                        "value": "512Mi"
                                    },
                                    {
                                        "name": "DEFAULT_TTL",
                                        "value": "0"
                                    },
                                    {
                                        "name": "MY_POD_NAME",
                                        "valueFrom": {
                                            "fieldRef": {
                                                "apiVersion": "v1",
                                                "fieldPath": "metadata.name"
                                            }
                                        }
                                    },
                                    {
                                        "name": "MY_POD_NAMESPACE",
                                        "valueFrom": {
                                            "fieldRef": {
                                                "apiVersion": "v1",
                                                "fieldPath": "metadata.namespace"
                                            }
                                        }
                                    },
                                    {
                                        "name": "MY_POD_IP",
                                        "valueFrom": {
                                            "fieldRef": {
                                                "apiVersion": "v1",
                                                "fieldPath": "status.podIP"
                                            }
                                        }
                                    }
                                ],
                                "image": "aerospike/aerospike-server",
                                "imagePullPolicy": "IfNotPresent",
                                "lifecycle": {
                                    "preStop": {
                                        "exec": {
                                            "command": [
                                                "/bin/sh",
                                                "-c",
                                                "while true; do finished=0; for part in $( asadm --no-config-file -e 'asinfo -v statistics -l' | grep migrate_par | cut -d= -f2); do if [ $part != 0 ]; then break; fi; finished=1; done; if [ $finished != 1 ]; then sleep 15; else exit 0; fi; done"
                                            ]
                                        }
                                    }
                                },
                                "livenessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sh",
                                            "-c",
                                            "asinfo -v build"
                                        ]
                                    },
                                    "failureThreshold": 3,
                                    "initialDelaySeconds": 30,
                                    "periodSeconds": 60,
                                    "successThreshold": 1,
                                    "timeoutSeconds": 1
                                },
                                "readinessProbe": {
                                    "failureThreshold": 3,
                                    "initialDelaySeconds": 10,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "tcpSocket": {
                                        "port": 3000
                                    },
                                    "timeoutSeconds": 1
                                },
                                "name": "aerospike",
                                "ports": [
                                    {
                                        "containerPort": 3000,
                                        "name": "aero-clients",
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 3002,
                                        "name": "aero-mesh",
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 3003,
                                        "name": "aero-info",
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "512Mi"
                                    }
                                },
                                "volumeMounts": [
                                    {
                                        "mountPath": "/etc/aerospike",
                                        "name": "confdir"
                                    },
                                    {
                                        "mountPath": "/opt/aerospike/data",
                                        "name": "datadir"
                                    }
                                ]
                            }
                        ],
                        "dnsPolicy": "ClusterFirst",
                        "initContainers": [
                            {
                                "args": [
                                    "-c",
                                    "cp /configs/install.sh /install.sh \u0026\u0026 chmod +x /install.sh \u0026\u0026 /install.sh"
                                ],
                                "command": [
                                    "/bin/sh"
                                ],
                                "env": [
                                    {
                                        "name": "POD_NAMESPACE",
                                        "valueFrom": {
                                            "fieldRef": {
                                                "apiVersion": "v1",
                                                "fieldPath": "metadata.namespace"
                                            }
                                        }
                                    },
                                    {
                                        "name": "SERVICE",
                                        "value": "aerospike"
                                    }
                                ],
                                "image": "aerospike/aerospike-tools",
                                "imagePullPolicy": "Always",
                                "name": "aerospike-init",
                                "resources": {},
                                "terminationMessagePath": "/dev/termination-log",
                                "terminationMessagePolicy": "File",
                                "volumeMounts": [
                                    {
                                        "mountPath": "/etc/aerospike",
                                        "name": "confdir"
                                    },
                                    {
                                        "mountPath": "/configs",
                                        "name": "initconfigs"
                                    }
                                ]
                            }
                        ],
                        "restartPolicy": "Always",
                        "schedulerName": "default-scheduler",
                        "securityContext": {},
                        "terminationGracePeriodSeconds": 30,
                        "volumes": [
                            {
                                "emptyDir": {},
                                "name": "confdir"
                            },
                            {
                                "configMap": {
                                    "defaultMode": 420,
                                    "name": "aerospike-conf"
                                },
                                "name": "initconfigs"
                            }
                        ]
                    }
                },
                "updateStrategy": {
                    "rollingUpdate": {
                        "partition": 0
                    },
                    "type": "RollingUpdate"
                },
                "volumeClaimTemplates": [
                    {
                        "metadata": {
                            "creationTimestamp": null,
                            "labels": {
                                "app": "aerospike"
                            },
                            "name": "datadir"
                        },
                        "spec": {
                            "accessModes": [
                                "ReadWriteOnce"
                            ],
                            "resources": {
                                "requests": {
                                    "storage": "1Gi"
                                }
                            },
                            "storageClassName": "ssd"
                        },
                        "status": {
                            "phase": "Pending"
                        }
                    }
                ]
            }
        }
